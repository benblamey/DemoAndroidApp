<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
	    	   
	<TextView
		android:id="@+id/local_timeline_text_view_capture_location"
		android:layout_centerHorizontal="true" 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:textStyle="bold"
		android:layout_alignParentLeft="true"
		android:layout_gravity="left"
		android:layout_marginRight="5dip"/>

	<TextView
		android:id="@+id/local_timeline_text_view_body" 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content" 
	    android:layout_below="@+id/local_timeline_text_view_capture_location"
	    android:layout_alignParentLeft="true"
		android:layout_gravity="left"
		android:layout_marginRight="5dip"/>
		
	<TextView
		android:id="@+id/local_timeline_text_view_details" 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content" 
		android:layout_below="@+id/local_timeline_text_view_body"
		android:layout_alignParentRight="true"
		android:layout_gravity="right"
		android:layout_marginRight="5dip"/>
	
</RelativeLayout>