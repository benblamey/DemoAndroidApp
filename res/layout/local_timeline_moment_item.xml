<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
    
    <com.ml4d.core.WebImageView
    	android:layout_alignParentLeft="true" 
		android:id="@+id/local_timeline_item_web_image_view"
		android:layout_height="100dp"
		android:layout_width="100dp"
		android:layout_marginRight="2dp"
		android:scaleType="centerCrop">
    </com.ml4d.core.WebImageView>
	    	   
	<TextView
		android:id="@+id/local_timeline_text_view_capture_location"
		android:layout_toRightOf="@+id/local_timeline_item_web_image_view"
		android:layout_centerHorizontal="true" 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:textStyle="bold"
	    android:layout_alignParentTop="true"
		android:layout_gravity="left"
		android:layout_marginRight="5dip"
		android:singleLine="true"
		android:maxLines="6"
		android:textColor="@color/color_ohow_red"/>

	<TextView
		android:id="@+id/local_timeline_text_view_body"
		android:layout_toRightOf="@+id/local_timeline_item_web_image_view"
		android:layout_below="@+id/local_timeline_text_view_capture_location" 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content" 
		android:layout_gravity="left"
		android:layout_marginRight="5dip"
		android:maxLines="5"
		android:textColor="#000000"
		android:ellipsize="end"/>

	<TextView
		android:id="@+id/local_timeline_text_view_details"
		android:layout_below="@+id/local_timeline_text_view_body" 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content" 
		android:layout_alignParentRight="true"
		android:layout_gravity="right"
		android:layout_marginRight="5dip"
		android:textColor="#000000"/>
	
</RelativeLayout>
