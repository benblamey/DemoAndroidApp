<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/activity_background">
    
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="top">
	    
	    <EditText
			android:layout_marginTop="4dip"
			android:layout_marginLeft="2dip"
			android:layout_marginRight="2dip"
			android:inputType="text|textNoSuggestions|textCapWords|textPersonName"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/register_edittext_first_name"
			android:hint="@string/register_hint_first_name"
			android:freezesText="true">
	    </EditText>
	    <EditText
			android:layout_marginLeft="2dip"
			android:layout_marginRight="2dip"
			android:inputType="text|textNoSuggestions|textCapWords|textPersonName"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/register_edittext_last_name"
			android:hint="@string/register_hint_last_name"
			android:freezesText="true">
	    </EditText>
	    <EditText
			android:layout_marginLeft="2dip"
			android:layout_marginRight="2dip"
			android:inputType="text|textNoSuggestions|textEmailAddress"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/register_edittext_email"
			android:hint="@string/register_hint_email"
			android:freezesText="true">
	    </EditText>
	    <EditText
			android:layout_marginLeft="2dip"
			android:layout_marginRight="2dip"
			android:inputType="text|textNoSuggestions"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/register_edittext_username"
			android:hint="@string/register_hint_username"
			android:freezesText="true">
	    </EditText>
	    <EditText
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:inputType="text|textNoSuggestions|textVisiblePassword"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:id="@+id/register_edittext_password"
	    	android:hint="@string/register_hint_password"
	    	android:password="true"
	    	android:freezesText="true">
	    </EditText>
	    
		<CheckBox 
			android:id="@+id/register_checkbox_terms"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:text="@string/register_checkbox_terms_label" />
			
        <LinearLayout 
			android:orientation="horizontal"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:weightSum="2">

	        <com.ml4d.core.Button2
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text="@string/register_view_terms_and_conditions_button_label"
	            android:id="@+id/register_view_terms_and_conditions_button"
	            style="@style/Widget.Button.OHOW.Important"/>
	
	        <com.ml4d.core.Button2
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text="@string/register_button_label"
	            android:id="@+id/register_register_button"
	            style="@style/Widget.Button.OHOW.Important"/>
            
        </LinearLayout>
        
	</LinearLayout>
</LinearLayout>
